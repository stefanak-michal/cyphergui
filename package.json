{
  "name": "@stefanak-michal/cyphergui",
  "version": "1.1.3",
  "private": false,
  "homepage": ".",
  "license": "Apache-2.0",
  "author": {
    "name": "Michal Stefanak",
    "url": "https://www.linkedin.com/in/michalstefanak/"
  },
  "funding": "https://ko-fi.com/michalstefanak",
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/stefanak-michal/cyphergui.git"
  },
  "dependencies": {
    "@memgraph/orb": "^0.4.3",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "animate.css": "^4.1.1",
    "bulma": "^1.0.2",
    "gh-pages": "^6.1.1",
    "mixpanel-browser": "^2.55.1",
    "neo4j-driver-lite": "^5.24.1",
    "react": "^19",
    "react-dom": "^19",
    "sass": "^1.78.0",
    "typescript": "^5"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/transformer-sass": "^2.13.3",
    "@parcel/transformer-webmanifest": "^2.13.3",
    "@playwright/test": "^1.47.1",
    "eslint": "^9",
    "parcel": "^2.13.3",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8"
  },
  "scripts": {
    "start": "parcel public/index.html --dist-dir build",
    "build": "parcel build public/index.html --dist-dir build --no-source-maps --no-cache --no-scope-hoist --public-url ./",
    "deploy": "gh-pages -d build",
    "format": "npx prettier . --write",
    "prettier-check": "npx prettier . --check",
    "lint": "npx eslint src",
    "playwright:ui": "npx playwright test --ui"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": true,
    "proseWrap": "preserve",
    "jsxSingleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 120,
    "endOfLine": "auto",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
